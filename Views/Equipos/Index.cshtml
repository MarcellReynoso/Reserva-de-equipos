@model IEnumerable<Reserva_de_equipos.Models.Equipo>

@{
    ViewData["Title"] = "ReQ GoSoft | Equipos";
}

<script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>

<h2 class="fw-lighter mb-lg-3 pb-1 h2">
    Administrar
    <strong class="fw-semibold">Equipos</strong>
</h2>

<div class="row justify-content-between pb-4">
    <div class="col-auto">
        <button class="rounded-3 p-2 px-3 text-center fw-semibold bg-enProceso d-flex align-items-center gap-2 border-0"
                data-bs-toggle="modal" data-bs-target="#crearEquipoModal">
            <iconify-icon icon="zondicons:add-solid"></iconify-icon>
            <span>Crear nuevo equipo</span>
        </button>
    </div>
</div>

<div class="table-responsive">
    <table id="Equipos" class="table table-hover w-100">
        <thead>
            <tr>
                <th style="width:48px;">Ícono</th>
                <th>Nombre</th>
                <th>Tipo de equipo</th>
                <th>Disponibilidad</th>
                <th style="width:160px;"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-center">
                        <img src="@Url.Content(item.TipoEquipo.IconoUrl)"
                             alt="icono"
                             style="
                                    width:48px;
                                    height:48px;
                                    object-fit:contain
                                    " />
                    </td>
                    <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                    <td>@Html.DisplayFor(modelItem => item.TipoEquipo.Nombre)</td>
                    <td>
                        @{
                            var fi = item.FechaInicio?.ToString("dd MMM yyyy HH:mm");
                            var ff = item.FechaFin?.ToString("dd MMM yyyy HH:mm");
                        }
                        <span class="text-nowrap">
                            @(fi ?? "—") — @(ff ?? "—")
                        </span>
                    </td>
                    <td class="text-nowrap">
                        <div class="d-flex justify-content-evenly gap-2">
                            <button type="button"
                                    class="rounded-3 p-2 px-3 text-center fw-semibold bg-pendiente d-flex align-items-center gap-2 border-0"
                                    data-bs-toggle="modal"
                                    data-bs-target="#editEquipoModal-@item.EquipoId">
                                <iconify-icon icon="ri:edit-fill"></iconify-icon>
                                <span>Editar</span>
                            </button>
                            <button type="button"
                                    class="rounded-3 p-2 px-3 text-center fw-semibold bg-enProceso d-flex align-items-center gap-2 border-0"
                                    data-bs-toggle="modal"
                                    data-bs-target="#readOnlyEquipoModal-@item.EquipoId">
                                <iconify-icon icon="mdi:eye"></iconify-icon>
                                <span>Ver detalles</span>
                            </button>
                            <form asp-controller="Equipos" asp-action="Delete" asp-route-id="@item.EquipoId"
                                  method="post" onclick="return confirm('¿Realmente desea borrar?');">
                                @Html.AntiForgeryToken()
                                <button class="rounded-3 p-2 px-3 text-center fw-semibold bg-rechazado d-flex align-items-center gap-2 border-0">
                                    <iconify-icon icon="material-symbols:delete"></iconify-icon>
                                    <span>Borrar</span>
                                </button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@await Html.PartialAsync("_CreateEquipo", new Reserva_de_equipos.Models.Equipo())

@foreach (var item in Model)
{
    @await Html.PartialAsync("_EditEquipo", item)
}

@foreach (var item in Model)
{
    @await Html.PartialAsync("_ReadOnlyEquipo", item)
}

@section Scripts {
@* 1. Render de la tabla *@
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            new DataTable('#Equipos', {
                pageLength: 5,
                lengthMenu: [5, 10, 15, 20, 50],
                responsive: true,
                language: {
                    url: '//cdn.datatables.net/plug-ins/2.3.4/i18n/es-ES.json',
                },
            });
        });
    </script>


@* 2. Previsualización de las img *@
    <script>
        document.addEventListener('change', (e) => {
          if (e.target.matches('input[type="file"][name="imagen"]')) {
            const file = e.target.files?.[0];
            const img  = e.target.closest('form')?.querySelector('#preview');
            if (!img) return;
            if (!file) { img.classList.add('d-none'); img.src = ''; return; }
            if (file.size > 5 * 1024 * 1024) { alert('La imagen supera los 5 MB'); e.target.value = ''; return; }
            img.src = URL.createObjectURL(file);
            img.classList.remove('d-none');
          }
        });
    </script>

}
