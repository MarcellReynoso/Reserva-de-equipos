@model IEnumerable<Reserva_de_equipos.Models.Empresa>

@{
    ViewData["Title"] = "ReQ GoSoft | Empresas";
}

<script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>

<h2 class="fw-lighter mb-lg-3 pb-1 h2">
    Administrar
    <strong class="fw-semibold">Empresas</strong>
</h2>

<div class="row justify-content-between pb-4">
    <div class="col-auto">
        <button class="rounded-3 p-2 px-3 text-center fw-semibold bg-enProceso d-flex align-items-center gap-2 border-0"
                data-bs-toggle="modal" data-bs-target="#crearEmpresaModal">
            <iconify-icon icon="zondicons:add-solid"></iconify-icon>
            <span>Crear nueva empresa</span>
        </button>
    </div>
</div>

<div class="table-responsive">
    <table id="Empresas" class="table table-hover w-100">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Descripción</th>
                <th style="width:160px;"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelitem => item.Nombre)</td>
                    <td>@Html.DisplayFor(modelitem => item.Descripción)</td>
                    <td class="text-nowrap">
                        <div class="d-flex justify-content-center gap-2">
                            <button type="button"
                                    class="rounded-3 p-2 px-3 text-center fw-semibold bg-pendiente d-flex align-items-center gap-2 border-0"
                                    data-bs-toggle="modal"
                                    data-bs-target="#editEmpresaModal-@item.EmpresaId">
                                <iconify-icon icon="ri:edit-fill"></iconify-icon>
                                <span>Editar</span>
                            </button>

                            <form asp-controller="Empresas" asp-action="Delete" asp-route-id="@item.EmpresaId"
                                  method="post" onclick="return confirm('¿Realmente desea borrar?');">
                                @Html.AntiForgeryToken()
                                <button class="rounded-3 p-2 px-3 text-center fw-semibold bg-rechazado d-flex align-items-center gap-2 border-0">
                                    <iconify-icon icon="material-symbols:delete"></iconify-icon>
                                    <span>Borrar</span>
                                </button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@await Html.PartialAsync("_CreateEmpresa", new Reserva_de_equipos.Models.Empresa())

@foreach (var item in Model)
{
    @await Html.PartialAsync("_EditEmpresa", item)
}

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            new DataTable('#Empresas', {
                pageLength: 5,
                lengthMenu: [5, 10, 15, 20, 50],
                responsive: true,
                language: {
                    url: '//cdn.datatables.net/plug-ins/2.3.4/i18n/es-ES.json',
                },
            });
        });
    </script>
}
