@model Reserva_de_equipos.Models.AreaDisponible

<div class="modal fade" id="crearAreaDisponibleModal" tabindex="-1" aria-labelledby="crearAreaDisponibleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header border-2 py-3">
                <h5 class="modal-title">Crear Área disponible</h5>
            </div>
            <div class="modal-body">
                <form asp-action="Create" method="post" novalidate class="modal-form p-1">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>
                    <div class="row mb-3">
                        <label asp-for="AreaId" class="form-label">Área</label>
                        <select asp-for="AreaId" class="form-select" asp-items="ViewBag.Areas">
                            <option value="" selected disabled>Seleccione un área</option>
                        </select>
                        <span asp-validation-for="AreaId" class="text-danger"></span>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="EquipoId" class="form-label">Equipo</label>
                        <select asp-for="EquipoId" class="form-select" asp-items="ViewBag.Equipos">
                            <option value="" selected disabled>Seleccione un equipo</option>
                        </select>
                        <span asp-validation-for="EquipoId" class="text-danger"></span>
                    </div>
                    <div class="d-flex justify-content-end gap-2 pt-2">
                        <button type="submit" class="btn btn-primary px-4">Guardar</button>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>