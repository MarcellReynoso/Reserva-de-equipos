@model Reserva_de_equipos.Models.Reserva
@{
    var isEdit = Model != null && Model.ReservaId > 0;
    var title = "Detalle de reserva";
}

<div class="modal fade" id="readOnlyReservaModal" tabindex="-1" aria-hidden="true" aria-labelledby="readOnlyReservaLabel">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content">
            <form id="formReservaReadOnly">
                <div class="modal-header border-2 py-4 pb-1">
                    <h5 class="modal-title" id="readOnlyReservaLabel">@title</h5>
                </div>

                <div class="modal-body">
                    <input type="hidden" asp-for="ReservaId" />

                    <!-- Estado y fecha (solo lectura) -->
                    <div class="row align-items-center g-2 mb-3">
                        <div class="col-6">
                            <label class="form-label">Estado</label>
                            <input class="form-control" value="@Model.Estado" readonly />
                        </div>
                        <div class="col-6">
                            <label class="form-label">Creada</label>
                            <input class="form-control" value="@Model.Fecha" readonly />
                        </div>
                    </div>

                    <!-- Tipo de equipo / Equipo -->
                    <div class="row align-items-center g-2 mb-3">
                        <div class="col-6">
                            <label class="form-label">Tipo de equipo</label>
                            <select id="TipoEquipoId" class="form-select" asp-items="ViewBag.TiposEquipo" disabled>
                                <option value="">—</option>
                            </select>
                            <script>
                                // Seleccionar el tipo correspondiente (si vino del servidor en el combo)
                                (function(){
                                  const sel = document.currentScript.previousElementSibling;
                                  if (sel && '@Model.Equipo?.TipoEquipoId' !== '') sel.value = '@Model.Equipo?.TipoEquipoId';
                                })();
                            </script>
                        </div>
                        <div class="col-6">
                            <label class="form-label">Equipo</label>
                            <select id="EquipoId" class="form-select" asp-for="EquipoId" asp-items="ViewBag.Equipos" disabled>
                                <option value="">—</option>
                            </select>
                        </div>
                    </div>

                    <!-- Fechas -->
                    <div class="row align-items-center g-2 mb-3">
                        <div class="col-6">
                            <label asp-for="FechaInicio" class="form-label">Fecha inicio</label>
                            <input asp-for="FechaInicio" type="datetime-local" class="form-control" readonly />
                        </div>
                        <div class="col-6">
                            <label asp-for="FechaFin" class="form-label">Fecha fin</label>
                            <input asp-for="FechaFin" type="datetime-local" class="form-control" readonly />
                        </div>
                    </div>

                    <div class="row align-items-center g-2 mb-3">
                        <div class="form-check">
                            <input class="form-check-input" asp-for="Indefinido" disabled />
                            <label class="form-check-label" asp-for="Indefinido">Indefinido</label>
                        </div>
                    </div>

                    <!-- Ubicación -->
                    <div class="row g-3 mt-1">
                        <div class="col-12">
                            <label asp-for="Ubicación" class="form-label">Ubicación</label>
                            <textarea asp-for="Ubicación" class="form-control" rows="3" readonly></textarea>
                        </div>
                    </div>

                    <!-- Descripción -->
                    <div class="row g-3 mt-1">
                        <div class="col-12">
                            <label asp-for="Descripcion" class="form-label">Descripción</label>
                            <textarea asp-for="Descripcion" class="form-control" rows="3" readonly></textarea>
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Este modal es solo lectura: prevenir cualquier envío por error
        document.addEventListener('shown.bs.modal', function (ev) {
          const modal = ev.target;
          if (modal.id !== 'readOnlyReservaModal') return;

          // cinturón y tirantes: asegurar bloqueo
          modal.querySelectorAll('input, select, textarea, button[type="submit"]').forEach(el => {
            if (el.tagName === 'TEXTAREA') el.readOnly = true;
            else if (el.type !== 'hidden') el.disabled = el.tagName !== 'BUTTON';
          });

          const form = modal.querySelector('#formReservaReadOnly');
          if (form) form.addEventListener('submit', (e) => e.preventDefault());
        });
    </script>
}
