@model Reserva_de_equipos.Models.Responsable

<div class="modal fade" id="editResponsableModal-@Model.ResponsableId" tabindex="-1"
     aria-labelledby="editResponsableModalLabel-@Model.ResponsableId" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header border-2 py-3">
                <h5 class="modal-title" id="editResponsableModalLabel-@Model.ResponsableId">Editar responsable</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body">
                <form asp-action="Edit" method="post" novalidate class="modal-form p-1">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="ResponsableId" />
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

                    <div class="row mb-3">
                        <div class="col-6">
                            <label asp-for="Nombre" class="mb-1"></label>
                            <input asp-for="Nombre" class="form-control" autocomplete="off" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>
                        <div class="col-6">
                            <label asp-for="SegundoNombre" class="mb-1"></label>
                            <input asp-for="SegundoNombre" class="form-control" autocomplete="off" />
                            <span asp-validation-for="SegundoNombre" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-6">
                            <label asp-for="ApellidoPaterno">Apellido paterno (*)</label>
                            <input asp-for="ApellidoPaterno" class="form-control" autocomplete="off" />
                            <span asp-validation-for="ApellidoPaterno" class="text-danger"></span>
                        </div>
                        <div class="col-6">
                            <label asp-for="ApellidoMaterno"></label>
                            <input asp-for="ApellidoMaterno" class="form-control" autocomplete="off" />
                            <span asp-validation-for="ApellidoMaterno" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Correo"></label>
                        <input asp-for="Correo" class="form-control" type="email" autocomplete="off" />
                        <span asp-validation-for="Correo" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Username"></label>
                        <input asp-for="Username" class="form-control" autocomplete="off" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-end gap-2 pt-2">
                        <button type="submit" class="btn btn-primary px-4">Guardar</button>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
