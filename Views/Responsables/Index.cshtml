@model IEnumerable<Reserva_de_equipos.Models.Responsable>

@{
    ViewData["Title"] = "ReQ GoSoft | Responsables";
}

<script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>

<h2 class="fw-lighter mb-lg-3 pb-1 h2">
    Administrar
    <strong class="fw-semibold">Responsables</strong>
</h2>

<div class="row justify-content-between pb-4">
    <div class="col-auto">
        <button class="btn btn-primary my-2 d-flex align-items-center gap-2"
                data-bs-toggle="modal" data-bs-target="#crearResponsableModal">
            <iconify-icon icon="zondicons:add-solid"></iconify-icon>
            <span>Crear nuevo responsable</span>
        </button>
    </div>
</div>

<div class="table-responsive">
    <table id="Responsables" class="table table-hover w-100">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Segundo nombre</th>
                <th>Apellido paterno</th>
                <th>Apellido materno</th>
                <th>Nombre de usuario</th>
                <th style="width:160px;"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelitem => item.Nombre)</td>
                    <td>@Html.DisplayFor(modelitem => item.SegundoNombre)</td>
                    <td>@Html.DisplayFor(modelitem => item.ApellidoPaterno)</td>
                    <td>@Html.DisplayFor(modelitem => item.ApellidoMaterno)</td>
                    <td>@Html.DisplayFor(modelitem => item.Username)</td>
                    <td class="text-nowrap">
                        <div class="d-flex justify-content-evenly gap-2">
                            <button type="button"
                                    class="btn btn-warning"
                                    data-bs-toggle="modal"
                                    data-bs-target="#editResponsableModal-@item.ResponsableId">
                                <iconify-icon icon="ri:edit-fill"></iconify-icon>
                                <span>Editar</span>
                            </button>

                            <form asp-controller="Responsables" asp-action="Delete" asp-route-id="@item.ResponsableId"
                                  method="post" onclick="return confirm('¿Realmente desea borrar?');">
                                @Html.AntiForgeryToken()
                                <button class="btn btn-danger">
                                    <iconify-icon icon="material-symbols:delete"></iconify-icon>
                                    <span>Borrar</span>
                                </button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@* Modal Crear Responsable: ahora solo elige un Usuario existente *@
<div class="modal fade" id="crearResponsableModal" tabindex="-1" aria-labelledby="crearResponsableModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header border-2 py-3">
                <h5 class="modal-title" id="crearResponsableModalLabel">Crear responsable</h5>
            </div>
            <div class="modal-body">
                <form asp-action="Create" method="post" novalidate class="modal-form p-1">
                    @Html.AntiForgeryToken()
                    <div class="mb-3">
                        <label class="form-label">Seleccione un usuario</label>
                        <select name="usuarioId" class="form-select" required>
                            <option selected disabled value="">Seleccione ... </option>
                            @foreach (var u in (IEnumerable<SelectListItem>)ViewBag.UsuariosResponsables)
                            {
                                <option value="@u.Value">@u.Text</option>
                            }
                        </select>
                    </div>

                    <div class="alert alert-info small">
                        El responsable tomará los datos del usuario seleccionado.
                    </div>

                    <div class="d-flex justify-content-end gap-2 pt-2">
                        <button type="submit" class="btn btn-primary px-4">Guardar</button>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


@foreach (var item in Model)
{
    @await Html.PartialAsync("_EditResponsable", item)
}

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            new DataTable('#Responsables', {
                pageLength: 5,
                lengthMenu: [5, 10, 15, 20, 50],
                responsive: true,
                language: {
                    url: '//cdn.datatables.net/plug-ins/2.3.4/i18n/es-ES.json',
                },
            });
        });
    </script>
}
