@{
    ViewData["Title"] = "Calendario por equipo";
    var equipoNombre = (string)ViewBag.EquipoNombre ?? "Equipo";
    var equipoTipo = (string)ViewBag.EquipoTipo ?? "";
    var equipoId = (int)ViewBag.EquipoId;
}

<h2 class="fw-lighter mb-lg-3 pb-1 h2">
    Reservas del equipo: <strong class="fw-semibold">@equipoNombre</strong>
</h2>

<div class="d-flex justify-content-between align-items-center mb-3">
    <a class="btn btn-secondary d-flex align-items-center gap-2" href="@Url.Action("Buscar", "Reservas")">
        <iconify-icon icon="mynaui:skip-back-solid"></iconify-icon>
        <span>Regresar</span>
    </a>
    <button class="btn btn-primary d-flex align-items-center gap-2" id="btnCrear">
        <iconify-icon icon="zondicons:add-solid"></iconify-icon>
        <span style="font-size:16px">Crear reserva</span>
    </button>
</div>

<div id="alertHost" class="position-fixed top-0 end-0 p-3" style="z-index:1100;"></div>

<div id="calendar"></div>

<section class="container px-0 mt-3">
    <div class="d-flex flex-wrap justify-content-between align-items-center gap-2">
        <h5 class="h5 mb-0 text-muted">Leyenda:</h5> 
        <div class="d-flex flex-wrap align-items-center gap-2" style="font-size:16px">
            <span class="fw-medium bg-pendiente px-3 py-1 rounded">Pendiente</span>
            <span class="fw-medium bg-enProceso px-3 py-1 rounded">En proceso</span>
            <span class="fw-medium bg-aprobado px-3 py-1 rounded">Aprobado</span>
            <span class="fw-medium bg-rechazado px-3 py-1 rounded">Rechazado</span>
        </div>
    </div>
</section>

<!-- Modal Crear Reserva -->
<div class="modal fade" id="crearReservaModal" tabindex="-1" aria-labelledby="crearReservaLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content shadow">
            <div class="modal-header border-2 py-4 pb-1">
                <h4 class="modal-title" id="crearReservaLabel">Equipo: @equipoNombre</h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>

            <form asp-action="Crear" asp-controller="Calendario" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="equipoId" value="@equipoId" />
                <input type="hidden" name="ubicacion" value="@((string)ViewBag.Ubicacion ?? "")" />

                <div class="modal-body row px-5 pt-0">
                    <div class="col-lg-6 d-flex align-items-center">
                        <img src="@ViewBag.EquipoImagenUrl"
                             alt="@equipoNombre"
                             class="rounded shadow-sm w-100"
                             style="object-fit:cover;">
                    </div>
                    <div class="col-lg-6 g-3">
                        <div class="mb-3">
                            <label for="fechaInicio" class="form-label">Fecha y hora de inicio (*)</label>
                            <input type="datetime-local" class="form-control" id="fechaInicio" name="fechaInicio" required />
                        </div>

                        <div class="mb-3">
                            <label for="fechaFin" class="form-label">Fecha y hora de fin (*)</label>
                            <input type="datetime-local" class="form-control" id="fechaFin" name="fechaFin" />
                        </div>

                        <div class="row align-items-center g-2">
                            <div class="form-check mt-2">
                                <input type="checkbox" class="form-check-input" id="Indefinido" name="indefinido" value="true" onclick="toggleFechaFin()" />
                                <label for="Indefinido" class="form-check-label">Indefinido</label>
                            </div>
                        </div>

                        <!-- Notificación de la fecha de fin -->
                        <div class="row align-items-center g-2 mb-3">
                            <div class="col-12">
                                <div id="alertFinWrapper" class="collapse">
                                    <div class="alert alert-info d-flex align-items-center py-2 px-3 mb-0"
                                         role="alert"
                                         style="border-left: 5px solid #0dcaf0; background-color: #e8f8fc;">
                                        <iconify-icon icon="material-symbols:info-outline" class="me-2" style="font-size: 1.3rem;"></iconify-icon>
                                        <span class="text-justify">
                                            <strong>Nota:</strong> Al marcar esta opción, tu reserva no tendrá <b>Fecha y hora de fin</b>.
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="descripcion" class="form-label">Detalles</label>
                            <textarea id="descripcion" name="descripcion" rows="3" class="form-control"
                                      placeholder="(Opcional) Detalles de la reserva..."></textarea>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Ubicación seleccionada</label>
                            <textarea class="form-control" rows="4" readonly>@(ViewBag.Ubicacion ?? "No se seleccionó ubicación")</textarea>
                        </div>


                    </div>
                </div>

                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Guardar</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                </div>
            </form>

        </div>
    </div>
</div>


@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {

          const equipoId = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(equipoId));
          const calendarEl = document.getElementById('calendar');
          const modalEl = document.getElementById('crearReservaModal');
          const modal = new bootstrap.Modal(modalEl);
          const inicioInput = document.getElementById('fechaInicio');
          const finInput = document.getElementById('fechaFin');

          const eventos = @Html.Raw(ViewBag.Reservas);
          const ICONO_TIPO = '@(ViewBag.IconoTipoEquipo ?? Url.Content("~/assets/images/icono-placeholder.svg"))';

          // --- Calendario ---
          const calendar = new FullCalendar.Calendar(calendarEl, {
            locale: 'es-PE',
            firstDay: 1,
            initialView: 'dayGridMonth',
            headerToolbar: {
              left: 'title',
              right: 'prev,next today',
              center: 'timeGridDay,timeGridWeek,dayGridMonth,multiMonthYear,listMonth'
            },
            buttonText: {
              year: 'Año',
              today: 'Hoy',
              month: 'Mes',
              week: 'Semana',
              day: 'Día',
              list: 'Lista'
            },
            events: eventos,

            eventContent(arg) {
              const wrap = document.createElement('div');
              const row = document.createElement('div');
              const img = document.createElement('img');
              img.src = ICONO_TIPO;
              img.alt = 'tipo';
              img.style.width = '14px';
              img.style.height = '14px';
              img.style.objectFit = 'contain';
              img.style.verticalAlign = 'middle';
              img.style.marginRight = '6px';
              row.appendChild(img);
              const title = document.createElement('span');
              title.textContent = arg.event.title || '';
              row.appendChild(title);
              wrap.appendChild(row);
              return { domNodes: [wrap] };
            },

            eventDidMount(info) {
              const estado = info.event.extendedProps.estado;
              if (estado === "Pendiente") {
                info.el.style.backgroundColor = "#fff5cc";
                info.el.style.borderColor = "#fff5cc";
                info.el.style.color = "#8e7a27";
              } else if (estado === "Aprobado") {
                info.el.style.backgroundColor = "#B9EBB7";
                info.el.style.borderColor = "#B9EBB7";
                info.el.style.color = "#024F00";
              } else if (estado === "Rechazado") {
                info.el.style.backgroundColor = "#ffd7d5";
                info.el.style.borderColor = "#ffd7d5";
                info.el.style.color = "#f14143";
              } else if (estado === "En proceso") {
                info.el.style.backgroundColor = "#cbe4ff";
                info.el.style.borderColor = "#cbe4ff";
                info.el.style.color = "#1929A8";
              }
            }
          });

          calendar.render();

          // --- Botón "Crear nueva reserva" ---
          const btnCrear = document.getElementById('btnCrear');
          if (btnCrear) {
            btnCrear.addEventListener('click', () => {
              inicioInput.value = '';
              finInput.value = '';
              modal.show();
            });
          }

        });
    </script>

    <script>
        function toggleFechaFin() {
          const check    = document.getElementById('Indefinido');
          const fechaFin = document.getElementById('fechaFin');
          const alertEl  = document.getElementById('alertFinWrapper');

          const collapse = bootstrap.Collapse.getOrCreateInstance(alertEl, { toggle: false });

          if (check.checked) {
            if (fechaFin) { fechaFin.value = ''; fechaFin.disabled = true; }
            collapse.show();
          } else {
            if (fechaFin) fechaFin.disabled = false;
            collapse.hide();
          }
        }

        // Inicializa estado cuando se abre el modal
        document.addEventListener('shown.bs.modal', function (e) {
          if (e.target.id !== 'crearReservaModal') return;
          setTimeout(toggleFechaFin, 0);
        });
        // Por si el modal ya está en DOM
        document.addEventListener('DOMContentLoaded', function () {
          setTimeout(toggleFechaFin, 0);
        });
    </script>
}

